    <script>
        function loadNotifications() {
            console.log("Rechargement des notifications...");

            $.ajax({
                url: "/Notification/GetNotificationsCount",
                type: "GET",
                success: function (data) {
                    console.log("Données reçues:", data);

                    // Mettre à jour le badge de notification
                    if (data.notificationCount > 0) {
                        $("#notifBadge").text(data.notificationCount).show();
                    } else {
                        $("#notifBadge").hide();
                    }

                    // Construire la liste des notifications
                    let notifHtml = `
                        <div class="header">Notifications</div>
                        <div class="scrollable-notifications">
                    `;

                    if (data.notifications.length > 0) {
                        data.notifications.forEach(notification => {
                            let isUnread = notification.status === "non lu";
                            let statusClass = isUnread ? "unread" : "read";
                            let bellClass = isUnread ? "fa-bell notification-icon unread" : "fa-bell notification-icon read";
                            let bgClass = isUnread ? "notification-item unread" : "notification-item read";

                            notifHtml += `
                                <li class="${bgClass} d-flex" data-notification-id="${notification.id}">
                                    <a href="#" class="dropdown-item d-flex p-2 w-100" onclick="markAsRead(${notification.id})">
                                        <div class="d-flex align-items-center me-3">
                                            <i class="fa ${bellClass}"></i>
                                        </div>
                                        <div class="d-flex flex-column justify-content-center w-100">
                                            <p class="notification-text ${statusClass}">${notification.message}</p>
                                            <p class="text-xs text-muted mb-0">
                                                <i class="fa fa-clock me-1"></i>
                                                <span>${new Date(notification.createdAt).toLocaleDateString()}</span>
                                            </p>
                                        </div>
                                    </a>
                                </li>
                            `;
                        });
                    } else {
                        notifHtml += '<li class="mb-2"><p class="text-xs text-center text-secondary">Aucune notification.</p></li>';
                    }

                    notifHtml += `</div>`; // Fermeture du div scrollable
                    $("#notifList").html(notifHtml);
                },
                error: function (xhr) {
                    console.error("Erreur lors du chargement des notifications :", xhr.responseText);
                }
            });
        }

        function markAsRead(notificationId) {
            console.log("Tentative de marquer comme lu:", notificationId);

            $.ajax({
                url: "/Notification/MarkNotificationAsRead",
                type: "POST",
                data: { notificationId: notificationId },
                success: function (response) {
                    console.log("Réponse du serveur:", response);

                    // Sélectionner l'élément et modifier son affichage
                    let notifItem = $(`li[data-notification-id='${notificationId}']`);
                    notifItem.removeClass("unread").addClass("read");
                    notifItem.find(".notification-text").removeClass("unread").addClass("read");
                    notifItem.find(".notification-icon").removeClass("unread").addClass("read");
                    notifItem.find("a").removeAttr("onclick"); // Désactiver le clic après lecture

                    // Vérifier s'il reste des notifications non lues
                    if ($(".notification-item.unread").length === 0) {
                        $("#notifBadge").hide();
                    }

                    // 🔄 Recharger les notifications en arrière-plan après 2 secondes
                    setTimeout(loadNotifications, 2000);
                },
                error: function (xhr) {
                    console.error("Erreur lors de la requête markAsRead:", xhr.responseText);
                }
            });
        }

