<script>
    $(document).ready(function () {
        console.log("🔍 Initialisation de SignalR...");

        var userId = @Context.Session.GetInt32("UserId") ?? 0;
        console.log("🔍 Vérification SignalR - userId:", userId);

        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub?userId=" + userId)
            .configureLogging(signalR.LogLevel.Information)
            .build();

        // 🔄 Connexion SignalR avec gestion des erreurs
        function startConnection() {
            connection.start().then(function () {
                console.log("✅ SignalR connecté avec userId:", userId);
            }).catch(function (err) {
                console.error("❌ Erreur de connexion SignalR :", err.toString());
                setTimeout(startConnection, 5000); // Reconnexion automatique après 5s
            });
        }

        connection.onclose(function (error) {
            console.error("🚨 SignalR déconnecté :", error);
            console.log("🔄 Tentative de reconnexion...");
            setTimeout(startConnection, 5000);
        });

        startConnection();

        // 📌 Charger les notifications existantes dès la connexion
        connection.on("LoadNotifications", function (notifications, unreadCount) {
            console.log("🔄 Chargement des notifications existantes...");
            updateNotificationBadge(unreadCount);
            renderNotifications(notifications);
        });

        // 📌 Réception des nouvelles notifications en temps réel
        connection.on("ReceiveNotification", function (notifications, unreadCount) {
            console.log("📩 Nouvelle notification reçue !");
            updateNotificationBadge(unreadCount);
            renderNotifications(notifications);
        });

        // 📌 Mise à jour après marquage comme lu
        connection.on("UpdateNotifications", function (notifications, unreadCount) {
            console.log("✅ Mise à jour des notifications après lecture !");
            updateNotificationBadge(unreadCount);
            renderNotifications(notifications);
        });

        // 📌 Mise à jour du badge de notifications
        function updateNotificationBadge(notificationCount) {
            console.log("🔄 Mise à jour du badge :", notificationCount);

            if (notificationCount > 0) {
                $("#notifBadge").text(notificationCount).show();
            } else {
                $("#notifBadge").text("").hide(); // Assurez-vous que la valeur est bien réinitialisée
            }
        }



        // 📌 Affichage dynamique des notifications avec le bon style
        function renderNotifications(notifications) {
            let notifHtml = `
                <div class="header">Notifications</div>
                <div class="scrollable-notifications">
            `;

            if (notifications.length > 0) {
                notifications.forEach(notification => {
                    let isUnread = notification.status === "non lu";
                    let statusClass = isUnread ? "unread" : "read";
                    let bellClass = isUnread ? "fa-bell notification-icon unread" : "fa-bell notification-icon read";
                    let bgClass = isUnread ? "notification-item unread" : "notification-item read";
                    const date = new Date(notification.createdAt).toLocaleString("fr-FR", {
                                            day: "2-digit",
                                            month: "long",   // "janvier", "février", etc.
                                            year: "numeric",
                                            hour: "2-digit",
                                            minute: "2-digit",
                                            hourCycle: "h23" // Force le format 24h sans AM/PM
                                        }).replace(":", "h:");

                    notifHtml += `
                        <li class="${bgClass} d-flex" data-notification-id="${notification.id}">
                            <a href="#" class="dropdown-item d-flex p-2 w-100" onclick="markAsRead(${notification.id})">
                                <div class="d-flex align-items-center me-3">
                                    <i class="fa ${bellClass}"></i>
                                </div>
                                <div class="d-flex flex-column justify-content-center w-100">
                                    <p class="notification-text ${statusClass}">${notification.message}</p>
                                    <p class="text-xs text-muted mb-0">
                                        <i class="fa fa-clock me-1"></i>
                                        <span>${date}</span>
                                    </p>
                                </div>
                            </a>
                        </li>
                    `;
                });
            } else {
                notifHtml += '<li class="mb-2"><p class="text-xs text-center text-secondary">Aucune notification.</p></li>';
            }

            notifHtml += `</div>`; // Fermeture du div scrollable
            $("#notifList").html(notifHtml);
        }

        // 📌 Marquer une notification comme lue via SignalR
