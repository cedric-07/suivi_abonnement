@model suivi_abonnement.Models.GlobalViewModel
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
                    <ul class="navbar-nav  justify-content-end">
                        <li class="nav-item dropdown pe-2 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-bell cursor-pointer"></i>
                                @if (Model?.AbonnementStatViewModel.Notifications != null && Model.AbonnementStatViewModel.Notifications.Any())
                                {
                                    <span class="badge badge-danger position-absolute top-0 start-100 translate-middle p-2 border border-light rounded-circle">
                                        @Model.AbonnementStatViewModel.Notifications.Count
                                    </span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end px-2 py-3 me-sm-n4" aria-labelledby="dropdownMenuButton">
                                @if (Model?.AbonnementStatViewModel.Notifications != null && Model.AbonnementStatViewModel.Notifications.Any())
                                {
                                    <div class="scrollable-notifications" style="max-height: 300px; overflow-y: auto;">
                                        @foreach (var notification in Model.AbonnementStatViewModel.Notifications)
                                        {
                                            <li class="mb-2">
                                                <a class="dropdown-item border-radius-md p-3 bg-light shadow-sm">
                                                    <div class="d-flex py-1">
                                                        <div class="d-flex align-items-center me-2">
                                                            <i class="fa fa-envelope text-primary" style="font-size: 24px;"></i> <!-- Icône de message -->
                                                        </div>
                                                        <div class="d-flex flex-column justify-content-center">
                                                            <h6 class="text-sm font-weight-normal mb-1">
                                                                <span class="font-weight-bold d-block">@notification.Message</span>
                                                            </h6>
                                                            <p class="text-xs text-muted mb-0" style=" font-size: 0.875rem;">
                                                                <i class="fa fa-clock me-1"></i>
                                                                <span >@notification.CreatedAt.ToString("dd MMM yyyy")</span>
                                                            </p>

                                                        </div>
                                                    </div>
                                                </a>
                                            </li>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <li class="mb-2">
                                        <p class="text-sm text-secondary">Aucune notification.</p>
                                    </li>
                                }
                            </ul>
                        </li>



                        <li class="nav-item d-flex align-items-center">
                            <a href="#logoutModal" data-bs-toggle="modal" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-sign-out-alt me-sm-1"></i>
                                <span class="d-sm-inline d-none">Déconnexion</span>
                            </a>
                        </li>

                        <li class="nav-item d-xl-none ps-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0" id="iconNavbarSidenav">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item px-3 d-flex align-items-center">
                            <a href="javascript:;" class="nav-link text-body p-0">
                                <i class="fixed-plugin-button-nav cursor-pointer"></i>
                            </a>
                        </li>
                    </ul>
</body>
</html>