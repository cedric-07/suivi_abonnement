@model suivi_abonnement.Models.Abonnement

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Facture - @Model.Nom</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            font-size: 14px;
            background-color: #f8f9fa;
            padding: 20px;
        }
        .invoice-container {
            max-width: 800px;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        .header-title {
            font-size: 24px;
            font-weight: bold;
            color: #0d2d5a;
        }
        .section-title {
            font-weight: bold;
            font-size: 16px;
            color: #0d2d5a;
            margin-bottom: 5px;
        }
        .section-content {
            font-size: 14px;
            color: #555;
        }
        .divider {
            border-bottom: 2px solid #ddd;
            margin: 10px 0;
        }
        .logo-custom {
            max-width: 70px !important; /* Ajuste selon ton besoin */
            max-height: 70px !important;
            margin-left: 0 !important;
            padding-top: 10px !important;
        }
    </style>
</head>
<body>

<div class="container d-flex justify-content-center">
    <div class="invoice-container p-4">
        
        <!-- Section en-tête avec logo et adresse entreprise -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                 <a class="navbar-brand" href="https://demos.creative-tim.com/soft-ui-dashboard/pages/dashboard.html" target="_blank">
                    <img src="../assets/img/logo_omnis.png" class="img-fluid logo-custom" alt="main_logo">
                </a>
                <p class="mb-1">Adresse : 123 Rue Ambohijatovo, Antananarivo, Madagascar</p>
                <p class="mb-1">Téléphone : +123 456 789</p>
                <p class="mb-0">Email : OmnisMdg@yahoo.com</p>
            </div>
           
        </div>

        <!-- Titre de la facture -->
        <h5 class="text-center text-primary mb-4 text-bold">Détails de l'abonnement - @Model.Nom</h5>

        <!-- Détails de l'abonnement -->
        <div class="mb-3">
            <div class="section-title">Description :</div>
            <div class="section-content">@Model.Description</div>
        </div>

        <div class="divider"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="section-title">Prix :</div>
                <div class="section-content">@Model.Prix.ToString("N2") Ariary</div>
            </div>
            <div class="col-md-6">
                <div class="section-title">Type :</div>
                <div class="section-content">@Model.Type</div>
            </div>
        </div>

        <div class="divider"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="section-title">Catégorie :</div>
                <div class="section-content">@Model.NomCategorie</div>
            </div>
            <div class="col-md-6">
                <div class="section-title">Fournisseur :</div>
                <div class="section-content">@Model.NomFournisseur</div>
            </div>
        </div>

        <div class="divider"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="section-title">Département :</div>
                <div class="section-content">@Model.NomDepartement</div>
            </div>
            <div class="col-md-6">
                <div class="section-title">Date de début :</div>
                <div class="section-content">@Model.DateDebut.ToString("d MMM yyyy")</div>
            </div>
        </div>

        <div class="divider"></div>

        <div class="section-title">Date d'expiration :</div>
        <div class="section-content">@Model.ExpirationDate.ToString("d MMM yyyy")</div>

    </div>
</div>

</body>
</html>
