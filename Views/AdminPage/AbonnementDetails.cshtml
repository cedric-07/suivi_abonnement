@model List<suivi_abonnement.Models.Abonnement>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Type</th>
            <th>Prix</th>
            <th>Date Début</th>
            <th>Date Expiration</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var abonnement in Model)
            {
                <tr>
                    <td>@abonnement.Id</td>
                    <td>@abonnement.Nom</td>
                    <td>@abonnement.Type</td>
                    <td>@abonnement.Prix</td>
                    <td>@abonnement.DateDebut.ToString("dd/MM/yyyy")</td>
                    <td>@abonnement.ExpirationDate.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">Aucun abonnement trouvé.</td>
            </tr>
        }
    </tbody>
</table>
